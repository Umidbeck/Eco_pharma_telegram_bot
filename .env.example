# ============================================================
# Eco Pharm Telegram Bot - Environment Variables
# ============================================================

# Bot Token (Telegram BotFather'dan olinadi)
BOT_TOKEN=your_bot_token_here

# Admin Telegram IDs (vergul bilan ajratilgan)
ADMIN_IDS=123456789,987654321

# Timezone
TIMEZONE=Asia/Tashkent

# Database Type: postgresql or sqlite
DATABASE_TYPE=postgresql

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=eco_pharm_bot
POSTGRES_USER=eco_pharm
POSTGRES_PASSWORD=eco_pharm_2024

# PostgreSQL Connection URL (optional, auto-generated if not set)
# DATABASE_URL=postgresql+asyncpg://eco_pharm:eco_pharm_2024@localhost:5433/eco_pharm_bot

# Logging
LOG_FILE=./logs/bot.log

# Debug Mode
DEBUG=false
